@inject IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext!;

    var month = DateTime.Now.Month;
    var year = DateTime.Now.Year;
}
<style>
    .navbar {
        background-color: #f8f9fa;
        padding: 10px 30px;
        margin: 0;
        display: flex;
        justify-content: space-between;
    }

    .navbar-brand {
        color: #343a40;
        font-weight: bold;
        font-size: 20px;
        margin: 0;
    }

    .centered_nav {
        width: 35%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
    }

    .nav-item {
        margin: auto;
    }

    .navbar-nav .nav-link {
        color: #343a40;
        font-weight: bold;
    }

    .navbar-nav .nav-link:hover {
        color: #007bff;
    }
</style>

<header>
    <nav class="navbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-page="/Index" class="navbar-brand">Planejaí</a>
            </li>
        </ul>
        <ul class="navbar-nav centered_nav">
            <li class="nav-item">
                <a asp-page="/Events/Index" class="nav-link">Eventos</a>
            </li>
            <li class="nav-item">
                <a asp-page="/Schedules/Index" class="nav-link">Cronogramas</a>
            </li>
            <li class="nav-item">
                <a asp-page="/Calendar/Index" asp-route-month="@month" asp-route-year="@year" class="nav-link">Calendário</a>
            </li>
        </ul>
        <ul class="navbar-nav">
            <li class="nav-item">
                @if (!httpContext.Session!.GetInt32("UserID").HasValue)
                {
                    <a asp-page="/User/Login" class="nav-link">Login</a>
                }
                else
                {
                    <a asp-page="/User/Profile" class="nav-link">@httpContext.Session!.GetString("UserName")</a>
                }
            </li>
        </ul>
    </nav>
</header>
